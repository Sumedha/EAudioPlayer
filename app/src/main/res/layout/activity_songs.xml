<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/materialbg"
    android:orientation="vertical"
    tools:context="com.example.android.eaudioplayer.Songs">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar6"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:background="@color/accent"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/toolbarText">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/musicEAudioSong1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:background="#56565650"
            android:paddingBottom="3dp"
            android:paddingTop="6dp"
            android:text="@string/shape_of_you_ed_sheeran"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/songTimer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/musicEAudioSong1"
            android:layout_alignRight="@id/musicEAudioSong1"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="#56565650"
            android:paddingBottom="3dp"
            android:paddingTop="6dp"
            android:text="03:55"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/musicEAudioSong2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/musicEAudioSong1"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:background="#56565650"
            android:paddingBottom="3dp"
            android:paddingTop="6dp"
            android:text="Careless Whisper - George Michael"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/songTimer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/musicEAudioSong2"
            android:layout_alignRight="@id/musicEAudioSong2"
            android:layout_below="@id/songTimer1"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="#56565650"
            android:paddingBottom="3dp"
            android:paddingTop="6dp"
            android:text="05:01"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:text="This is the list of all songs using 2 OnClickListeners for the 2 songs in the library"
        android:textSize="20sp" />
</LinearLayout>
